<div id="menu">
  <h3>Do you want to see our Jouneys or Reports?</h3>
  
  <img src="/images/route.png" class="img-menu">
  <br>
  <button id="idJourneys" class="button-menu button-menu-style">Journeys</button>
  <br>
  
  <img src="/images/newspaper.png">
  <br>
  <button id="idReports" class="button-menu button-menu-style">Reports</button>
  <br>
  
  {{!-- <button id="idPdI">Points of interest</button> --}}
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.js"></script>

<script>
  document.querySelector("#idJourneys").addEventListener('click', function () {
    const menuContainer = document.querySelector("#menu")
    axios.get("http://localhost:3000/navi/journeys").then((journeysPayload) => {
      menuContainer.innerHTML = `<div class="menu2">
                                <h3>List of Journeys</h3>
                              <a href="/navi/journey/new" class="button-menu button-mar">Add Journey</a>
                              </div>`;

      journeysPayload.data.journeys.forEach((journey) => {
        menuContainer.innerHTML +=
          `<div class="menu2">
            <h4>${journey.identifier}</h4>
               <a href="/navi/journey/${journey._id}" class="button-menu button-mar">Read more</a>
            </div>`
      })

    })
  })

  document.querySelector("#idReports").addEventListener('click', function () {
    const menuContainer = document.querySelector("#menu")
    axios.get("http://localhost:3000/navi/reports").then((reportsPayload) => {
      menuContainer.innerHTML = `<div class="menu2">
                              <h3>List of Reports</h3>
                              <a href="/navi/report/new" class="button-menu button-mar">Add Report</a>`;

      reportsPayload.data.reports.forEach((report) => {
        menuContainer.innerHTML +=
          `<div class="menu2">
            <h4>${report.name}</h4>
              <a href="/navi/report/${report._id}" class="button-menu button-mar">Read more</a>
            </div>`
      })

    })
  })

  
</script>